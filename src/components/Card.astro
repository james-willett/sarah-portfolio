---
/**
 * Card - Generic container component
 *
 * A versatile card component that provides consistent styling for content containers.
 * Used throughout the site for various content blocks (about sections, testimonials, etc.).
 *
 * Props:
 * - padding: Padding size (none, sm, md, lg)
 * - border: Whether to show border (true/false)
 * - shadow: Shadow size (none, sm, md, lg)
 * - className: Additional CSS classes to apply
 * - rounded: Border radius size (sm, md, lg, xl)
 * - hover: Enable hover effect (slight lift and shadow increase)
 *
 * Design Notes:
 * - Clean, minimal card design matching reference images
 * - Subtle borders and shadows
 * - Light background in light mode, dark background in dark mode
 * - Flexible styling through props
 * - Content is passed via slot for maximum flexibility
 */

interface Props {
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  border?: boolean;
  shadow?: 'none' | 'sm' | 'md' | 'lg';
  className?: string;
  rounded?: 'sm' | 'md' | 'lg' | 'xl';
  hover?: boolean;
}

const {
  padding = 'md',
  border = true,
  shadow = 'sm',
  className = '',
  rounded = 'xl',
  hover = false,
} = Astro.props;

// Padding variants
const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
  xl: 'p-12',
};

// Shadow variants
const shadowClasses = {
  none: '',
  sm: 'shadow-sm',
  md: 'shadow-md',
  lg: 'shadow-lg',
};

// Rounded variants
const roundedClasses = {
  sm: 'rounded-sm',
  md: 'rounded-md',
  lg: 'rounded-lg',
  xl: 'rounded-xl',
};

// Border classes
const borderClass = border ? 'border border-border dark:border-border-dark' : '';

// Hover effect classes
const hoverClass = hover ? 'transition-all duration-300 hover:-translate-y-1 hover:shadow-lg' : '';

// Combine all classes
const allClasses = `
  bg-white dark:bg-zinc-900
  ${paddingClasses[padding]}
  ${shadowClasses[shadow]}
  ${roundedClasses[rounded]}
  ${borderClass}
  ${hoverClass}
  ${className}
`;
---

<div class={allClasses}>
  <slot />
</div>
