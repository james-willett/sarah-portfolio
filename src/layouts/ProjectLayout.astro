---
/**
 * ProjectLayout - Layout for individual project/case study pages
 *
 * Extends BaseLayout with project-specific features:
 * - Project metadata in SEO tags
 * - Floating table of contents (sticky sidebar on desktop, starts at title level)
 * - Hero section with project details
 * - Structured content area for case study
 * - Back navigation link
 */

import BaseLayout from './BaseLayout.astro';
import FloatingIndex from '../components/FloatingIndex.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { title, description, client, role, timeline, liveUrl, thumbnail } = project.data;

// Generate OG image from project thumbnail (if available)
const ogImage = thumbnail?.src || '/og-image.jpg';
---

<BaseLayout
  title={title}
  description={description}
  image={ogImage}
  type="article"
>
  <main class="flex-1">
    <!-- Back Link (above the two-column layout) -->
    <div class="px-6 pt-12 md:pt-16">
      <div class="max-w-content mx-auto">
        <a
          href="/design"
          class="inline-flex items-center gap-2 text-sm text-muted hover:text-foreground mb-8 transition-colors"
        >
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Back to Design
        </a>
      </div>
    </div>

    <!-- Main two-column layout: index on left, content on right -->
    <div class="px-6 pb-16 md:pb-24">
      <div class="max-w-content mx-auto">
        <div class="lg:grid lg:grid-cols-[200px_1fr] lg:gap-12">
          <!-- Floating Index (sticky sidebar) - hidden on mobile -->
          <aside class="hidden lg:block">
            <div class="sticky top-32">
              <FloatingIndex />
            </div>
          </aside>

          <!-- Main Content Column: Hero + Article -->
          <div>
            <!-- Project Hero Section -->
            <section class="mb-12">
              <!-- Project Title -->
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-foreground">
                {title}
              </h1>

              <!-- Project Description -->
              <p class="text-lg md:text-xl text-muted mb-8 max-w-3xl">
                {description}
              </p>

              <!-- Project Metadata -->
              <div class="flex flex-wrap gap-6 md:gap-8 text-sm border-t border-border pt-6">
                {client && (
                  <div>
                    <dt class="text-muted mb-1">Client</dt>
                    <dd class="text-foreground font-medium">{client}</dd>
                  </div>
                )}
                {role && (
                  <div>
                    <dt class="text-muted mb-1">Role</dt>
                    <dd class="text-foreground font-medium">{role}</dd>
                  </div>
                )}
                {timeline && (
                  <div>
                    <dt class="text-muted mb-1">Timeline</dt>
                    <dd class="text-foreground font-medium">{timeline}</dd>
                  </div>
                )}
                {liveUrl && (
                  <div>
                    <dt class="text-muted mb-1">Live Site</dt>
                    <dd>
                      <a
                        href={liveUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-accent hover:underline font-medium inline-flex items-center gap-1"
                      >
                        View Project
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M12 8.66667V12.6667C12 13.0203 11.8595 13.3594 11.6095 13.6095C11.3594 13.8595 11.0203 14 10.6667 14H3.33333C2.97971 14 2.64057 13.8595 2.39052 13.6095C2.14048 13.3594 2 13.0203 2 12.6667V5.33333C2 4.97971 2.14048 4.64057 2.39052 4.39052C2.64057 4.14048 2.97971 4 3.33333 4H7.33333M10 2H14M14 2V6M14 2L6.66667 9.33333" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </a>
                    </dd>
                  </div>
                )}
              </div>
            </section>

            <!-- Case Study Content -->
            <article class="prose prose-lg">
              <!-- MDX content will be rendered here -->
              <slot />
            </article>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /*
   * Prose styling for case study content
   * Using plain CSS instead of @apply for Tailwind v4 compatibility
   */
  .prose {
    max-width: 65ch;
  }

  .prose h2 {
    font-size: 1.875rem; /* text-3xl */
    line-height: 2.25rem;
    font-weight: 700; /* font-bold */
    margin-top: 3rem; /* mt-12 */
    margin-bottom: 1rem; /* mb-4 */
    color: #3F3F3F; /* text-foreground */
    /* Add scroll margin so anchor links don't get hidden behind sticky header */
    scroll-margin-top: 120px;
  }

  .prose h3 {
    font-size: 1.5rem; /* text-2xl */
    line-height: 2rem;
    font-weight: 600; /* font-semibold */
    margin-top: 2rem; /* mt-8 */
    margin-bottom: 0.75rem; /* mb-3 */
    color: #3F3F3F;
  }

  .prose h4 {
    font-size: 1.25rem; /* text-xl */
    line-height: 1.75rem;
    font-weight: 600; /* font-semibold */
    margin-top: 1.5rem; /* mt-6 */
    margin-bottom: 0.5rem; /* mb-2 */
    color: #3F3F3F;
  }

  .prose p {
    font-size: 1rem; /* text-base */
    line-height: 1.625; /* leading-relaxed */
    margin-bottom: 1rem; /* mb-4 */
    color: #3F3F3F;
  }

  .prose a {
    color: #3F3F3F; /* text-accent */
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose ul, .prose ol {
    margin-top: 1rem; /* my-4 */
    margin-bottom: 1rem;
    margin-left: 1.5rem; /* ml-6 */
  }

  .prose li {
    margin-bottom: 0.5rem; /* mb-2 */
  }

  .prose img {
    border-radius: 0.5rem; /* rounded-lg */
    margin-top: 2rem; /* my-8 */
    margin-bottom: 2rem;
  }

  .prose blockquote {
    border-left-width: 4px; /* border-l-4 */
    border-left-color: #3F3F3F; /* border-accent */
    padding-left: 1rem; /* pl-4 */
    font-style: italic;
    margin-top: 1.5rem; /* my-6 */
    margin-bottom: 1.5rem;
  }

  /* Horizontal rule styling */
  .prose hr {
    border: none;
    border-top: 1px solid #e5e5e5;
    margin: 2.5rem 0;
  }
</style>
