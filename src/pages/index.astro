---
/**
 * Home Page - Sarah's Portfolio Landing Page
 *
 * Layout from Figma design:
 * - Split layout: intro text on left, bento-box project grid on right
 * - "Hi I'm Sarah" heading with PP Radio Grotesk styling
 * - Two paragraphs of description text
 * - "Contact me" outline button
 * - Bento-box grid with 4 project showcases arranged asymmetrically
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Sarah - UX Designer"
  description="I'm a UX designer who combines strategic thinking, visual craft, and critical inquiry. I design AI experiences people trust."
>
  <main class="flex-1">
    <!-- Hero Section - Split Layout -->
    <section class="max-w-content mx-auto px-6 py-8 md:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">

        <!-- LEFT SIDE: Intro Text -->
        <div class="space-y-6 lg:pt-8">
          <!-- Main Heading - Figma: PP Radio Grotesk, 64px, 400 weight, #3F3F3F -->
          <h1 style="color: #3F3F3F; font-size: 64px; font-weight: 400; font-family: 'Space Grotesk', sans-serif;">Hi I'm Sarah</h1>

          <!-- Description Paragraphs - Using #3F3F3F from Figma specs -->
          <div class="space-y-4 max-w-md">
            <p style="color: #3F3F3F; font-size: 16px; line-height: 1.6;">
              I'm a UX designer who combines strategic thinking, visual craft, and critical inquiry.
            </p>
            <p style="color: #3F3F3F; font-size: 16px; line-height: 1.6;">
              I design AI experiences people trust, and I question what technology should do, not just what it can do.
            </p>
          </div>

          <!-- Contact Button - Outline/pill style matching Figma -->
          <div class="pt-4">
            <Button variant="outline" href="/contact">
              Contact me
            </Button>
          </div>
        </div>

        <!-- RIGHT SIDE: Bento-Box Project Grid -->
        <div class="bento-grid">
          <!--
            Bento grid layout matching Figma reference:
            - Top left: HiGloss (watercolor/gradient effect)
            - Top right: Business International Machines (circular badge)
            - Bottom left: Star badge (yellow with puzzle pieces)
            - Bottom right: Shipped Products (dark maroon square)
          -->

          <!-- HiGloss - Top Left -->
          <a
            href="/projects/higloss-energy"
            class="bento-item bento-higloss group"
            aria-label="View HiGloss Energy project"
          >
            <div class="bento-higloss-bg">
              <span class="bento-higloss-text">HiGloss</span>
            </div>
          </a>

          <!-- Business International Machines - Top Right -->
          <a
            href="/projects/ibm"
            class="bento-item bento-ibm group"
            aria-label="View IBM project"
          >
            <div class="bento-ibm-badge">
              <span class="bento-ibm-text">Business</span>
              <span class="bento-ibm-text-lg">International</span>
              <span class="bento-ibm-text">Machines</span>
            </div>
          </a>

          <!-- Star Badge - Bottom Left -->
          <div class="bento-item bento-star">
            <div class="bento-star-badge">
              <div class="bento-star-inner">
                <svg viewBox="0 0 24 24" class="bento-star-icon" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </div>
              <span class="bento-star-text">The Willett Way</span>
            </div>
          </div>

          <!-- Shipped Products - Bottom Right -->
          <a
            href="/projects/shipped-products"
            class="bento-item bento-shipped group"
            aria-label="View Shipped Products"
          >
            <div class="bento-shipped-content">
              <span class="bento-shipped-text">Shipped</span>
              <span class="bento-shipped-text">Products</span>
            </div>
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /*
   * Bento Grid Layout
   * Asymmetric grid matching the Figma design
   */
  .bento-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 1rem;
    max-width: 480px;
  }

  @media (max-width: 1024px) {
    .bento-grid {
      max-width: 100%;
      margin: 0 auto;
    }
  }

  .bento-item {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .bento-item:hover {
    transform: translateY(-4px);
  }

  /*
   * HiGloss Card - Watercolor gradient effect
   */
  .bento-higloss {
    aspect-ratio: 4/3;
    border-radius: 16px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bento-higloss-bg {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Watercolor gradient effect */
    background: linear-gradient(
      135deg,
      #d4c4d4 0%,
      #c9b8d4 20%,
      #d4d4e4 40%,
      #e4d4c4 60%,
      #f4e4d4 80%,
      #f9f4f4 100%
    );
    position: relative;
  }

  /* Add some organic shapes for the watercolor effect */
  .bento-higloss-bg::before {
    content: '';
    position: absolute;
    width: 60%;
    height: 80%;
    background: radial-gradient(ellipse at center, rgba(180, 160, 200, 0.6) 0%, transparent 70%);
    border-radius: 50%;
    left: 10%;
    top: 10%;
  }

  .bento-higloss-bg::after {
    content: '';
    position: absolute;
    width: 50%;
    height: 60%;
    background: radial-gradient(ellipse at center, rgba(200, 180, 160, 0.5) 0%, transparent 70%);
    border-radius: 50%;
    right: 10%;
    bottom: 20%;
  }

  .bento-higloss-text {
    font-family: var(--font-family-heading, "Space Grotesk", system-ui, sans-serif);
    font-size: 2rem;
    font-weight: 400;
    font-style: italic;
    color: #4a4a5a;
    position: relative;
    z-index: 1;
  }

  /*
   * IBM Badge - Circular vintage badge style
   */
  .bento-ibm {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bento-ibm-badge {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    background: #2a2a2a;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    transition: transform 0.3s ease;
  }

  .bento-ibm:hover .bento-ibm-badge {
    transform: scale(1.05);
  }

  .bento-ibm-text {
    font-family: var(--font-family-sans, "Inter", system-ui, sans-serif);
    font-size: 0.65rem;
    font-weight: 600;
    color: #f5f5f5;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    line-height: 1.4;
  }

  .bento-ibm-text-lg {
    font-family: var(--font-family-sans, "Inter", system-ui, sans-serif);
    font-size: 0.75rem;
    font-weight: 700;
    color: #f5f5f5;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.4;
  }

  /*
   * Star Badge - Yellow circular badge with puzzle icon
   */
  .bento-star {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bento-star-badge {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    background: linear-gradient(145deg, #d4a84c 0%, #c49a3a 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: inset 0 2px 4px rgba(255, 255, 255, 0.3), 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .bento-star-inner {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bento-star-icon {
    width: 32px;
    height: 32px;
    color: #2a5a4a;
  }

  .bento-star-text {
    position: absolute;
    font-family: var(--font-family-sans, "Inter", system-ui, sans-serif);
    font-size: 0.5rem;
    font-weight: 600;
    color: #5a4a3a;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    /* Circular text effect - simplified */
    top: 15%;
    text-align: center;
  }

  /*
   * Shipped Products - Dark maroon square
   */
  .bento-shipped {
    aspect-ratio: 1;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #5a2a2a;
  }

  .bento-shipped-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1rem;
  }

  .bento-shipped-text {
    font-family: var(--font-family-sans, "Inter", system-ui, sans-serif);
    font-size: 1rem;
    font-weight: 500;
    color: #f5f5f5;
    line-height: 1.3;
  }

  .bento-shipped:hover {
    background: #6a3a3a;
  }

  /*
   * Dark mode adjustments
   */
  :global(.dark) .bento-higloss-bg {
    background: linear-gradient(
      135deg,
      #3a3a4a 0%,
      #4a4a5a 20%,
      #3a4a4a 40%,
      #4a4a3a 60%,
      #5a4a4a 80%,
      #4a4a4a 100%
    );
  }

  :global(.dark) .bento-higloss-text {
    color: #c0c0d0;
  }

  :global(.dark) .bento-star-badge {
    background: linear-gradient(145deg, #8a7a3a 0%, #7a6a2a 100%);
  }

  :global(.dark) .bento-star-text {
    color: #d0c0a0;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .bento-higloss-text {
      font-size: 1.5rem;
    }

    .bento-ibm-badge,
    .bento-star-badge {
      width: 110px;
      height: 110px;
    }

    .bento-ibm-text {
      font-size: 0.55rem;
    }

    .bento-ibm-text-lg {
      font-size: 0.65rem;
    }

    .bento-shipped-text {
      font-size: 0.85rem;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .bento-item {
      transition: none;
    }

    .bento-item:hover {
      transform: none;
    }

    .bento-ibm:hover .bento-ibm-badge {
      transform: none;
    }
  }
</style>
