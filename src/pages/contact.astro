---
/**
 * Contact Page - Get in touch with Sarah
 *
 * Features:
 * - Contact form using the ContactForm component (Netlify Forms integration)
 * - Social media links for alternative contact methods
 * - Clean, accessible design matching Sarah's aesthetic
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import { siteConfig } from '../../astro.config.mjs';
---

<BaseLayout
  title="Contact"
  description="Get in touch with Sarah about UX design projects, collaborations, or just to say hello."
>
  <main class="flex-1">
    <!-- Contact Section -->
    <section class="max-w-content mx-auto px-6 py-12 md:py-16">
      <div class="max-w-4xl mx-auto">
        <!-- Page Title and Intro -->
        <div class="mb-12 text-center">
          <!-- Page Title - matching homepage heading style -->
          <h1
            style="color: #3F3F3F; font-size: 48px; font-weight: 400; font-family: 'Space Grotesk', sans-serif;"
            class="mb-6 dark:text-foreground-dark"
          >
            Let's Connect
          </h1>
          <!-- Intro Text -->
          <p
            style="color: #3F3F3F; font-size: 18px; line-height: 1.6;"
            class="max-w-2xl mx-auto dark:text-muted-dark"
          >
            I'm always interested in hearing about new projects, design challenges, or opportunities to collaborate.
          </p>
        </div>

        <!-- Two Column Layout: Form + Info -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16">
          <!-- Left Column: Contact Form (takes 2 columns on large screens) -->
          <div class="lg:col-span-2">
            <ContactForm />
          </div>

          <!-- Right Column: Additional Info -->
          <div class="space-y-8">
            <!-- Contact Info Card -->
            <div
              class="p-6 rounded-xl bg-zinc-50 dark:bg-zinc-900 border border-border dark:border-border-dark"
            >
              <h2
                class="text-lg font-semibold text-foreground dark:text-foreground-dark mb-4"
                style="font-family: 'Space Grotesk', sans-serif;"
              >
                Other Ways to Reach Me
              </h2>

              <!-- Social Links - Vertical Layout -->
              <div class="space-y-4">
                {
                  siteConfig.social.email && (
                    <a
                      href={`mailto:${siteConfig.social.email}`}
                      class="flex items-center gap-3 text-muted dark:text-muted-dark hover:text-accent dark:hover:text-accent-dark transition-colors group"
                    >
                      <div class="w-10 h-10 flex items-center justify-center rounded-full bg-white dark:bg-zinc-800 border border-border dark:border-border-dark group-hover:border-accent dark:group-hover:border-accent-dark transition-colors">
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                          />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-foreground dark:text-foreground-dark">
                          Email
                        </div>
                        <div class="text-sm">{siteConfig.social.email}</div>
                      </div>
                    </a>
                  )
                }

                {
                  siteConfig.social.linkedin && (
                    <a
                      href={siteConfig.social.linkedin}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 text-muted dark:text-muted-dark hover:text-accent dark:hover:text-accent-dark transition-colors group"
                    >
                      <div class="w-10 h-10 flex items-center justify-center rounded-full bg-white dark:bg-zinc-800 border border-border dark:border-border-dark group-hover:border-accent dark:group-hover:border-accent-dark transition-colors">
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-foreground dark:text-foreground-dark">
                          LinkedIn
                        </div>
                        <div class="text-sm">Connect with me</div>
                      </div>
                    </a>
                  )
                }

                {
                  siteConfig.social.dribbble && (
                    <a
                      href={siteConfig.social.dribbble}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 text-muted dark:text-muted-dark hover:text-accent dark:hover:text-accent-dark transition-colors group"
                    >
                      <div class="w-10 h-10 flex items-center justify-center rounded-full bg-white dark:bg-zinc-800 border border-border dark:border-border-dark group-hover:border-accent dark:group-hover:border-accent-dark transition-colors">
                        <svg
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M12 0C5.375 0 0 5.375 0 12s5.375 12 12 12 12-5.375 12-12S18.625 0 12 0zm8.522 6.522c1.04 1.455 1.673 3.231 1.673 5.143 0 .27-.015.537-.039.8-1.935-.367-4.036-.522-6.156-.367-.195-.479-.39-.958-.61-1.423 2.379-1.027 4.332-2.504 5.132-4.153zM12 2.087c2.114 0 4.051.73 5.601 1.95-.683 1.455-2.464 2.868-4.602 3.777-1.212-2.22-2.632-4.139-3.848-5.532A9.823 9.823 0 0112 2.087zm-3.263.488c1.2 1.378 2.605 3.282 3.824 5.481-2.91.784-6.245 1.241-9.45 1.241-.123 0-.245 0-.367-.006A9.844 9.844 0 018.737 2.575zM2.087 12c0-.123.003-.246.008-.368 3.551.03 7.32-.45 10.548-1.35.195.393.375.791.547 1.192-3.316 1.087-6.087 3.305-7.776 5.936A9.812 9.812 0 012.087 12zm3.39 6.768c1.559-2.494 4.067-4.527 7.083-5.569.823 2.175 1.456 4.488 1.813 6.817a9.878 9.878 0 01-8.896-1.248zm10.666.804c-.33-2.175-.93-4.349-1.707-6.402 1.95-.165 3.894.015 5.697.354a9.883 9.883 0 01-3.99 6.048z" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-foreground dark:text-foreground-dark">
                          Dribbble
                        </div>
                        <div class="text-sm">View my work</div>
                      </div>
                    </a>
                  )
                }
              </div>
            </div>

            <!-- Response Time Note -->
            <div
              class="p-4 rounded-lg bg-accent/5 dark:bg-accent-dark/5 border border-accent/20 dark:border-accent-dark/20"
            >
              <div class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-accent dark:text-accent-dark flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <p class="text-sm text-muted dark:text-muted-dark leading-relaxed">
                  I typically respond within 1-2 business days. For urgent inquiries, please reach out via email directly.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* Responsive heading adjustments */
  @media (max-width: 768px) {
    h1 {
      font-size: 36px !important;
    }
  }
</style>
